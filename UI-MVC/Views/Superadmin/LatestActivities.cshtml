@using COI.BL.User
@using Microsoft.AspNetCore.Identity
@model IEnumerable<COI.BL.Domain.Ideation.Idea>

@{
    ViewData["Title"] = "Superadmin";
}





<main class="content content--shadow container">
    <h1 class="padding-t1remM">Superadmin</h1>
    <div>
        <h4>Verander de instellingen</h4>
        <hr />
    </div>
    <div class="row">
        <div class="col-md-3">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a
                        class="nav-link nav-item__background"
                        id="nieuwPlatform"
                        asp-controller="Superadmin" asp-action="Index"
                    >Nieuw Platform</a>
                </li>
                <li class="nav-item">
                    <a
                        class="nav-link nav-item__background"
                        id="activeProjects"
                        asp-controller="Superadmin" asp-action="ActiveProjects"
                    >Actieve Projecten</a>
                </li>
                <li class="nav-item">
                    <a
                        class="nav-link nav-item__background"
                        id="closedProjects"
                        asp-controller="Superadmin" asp-action="ClosedProjects">
                        Gesloten Projecten
                    </a>
                </li>
                <li class="nav-item">
                    <a
                        class="nav-link nav-item__background active"
                        id="latestActivity"
                        asp-controller="Superadmin" asp-action="LatestActivities"
                    >Laatste Activiteiten</a>
                </li>
                <li class="nav-item">
                    <a
                        class="nav-link nav-item__background"
                        id="url"
                        asp-controller="Superadmin" asp-action="URL"
                    >URL</a>
                </li>
            </ul>
        </div>
        <div class="col-md-9">
            <h4 class="padding-t1remM">Laatste activiteiten</h4>
            <section class="comments mt-5 pt-4">

                <div id="comments">
                </div>
            </section>
        </div>
    </div>
</main>

@section Scripts
{
    <script type="text/javascript" src="/dist/admin.entry.js" defer></script>
}
