<ul class="nav navbar-nav navbar-right">
    <li class="nav-item">
        <a href="#" class="nav-link nav-login" id="searchIcon">
            <i class="fas fa-search"></i>
        </a>
    </li>
    <li class="nav-item">
        <a
            href="https://www.facebook.com/treecompany.be/"
            class="nav-link nav-login">
            <i class="fab fa-facebook-f"></i>
        </a>
    </li>
    <li class="nav-item">
        <a href="#" class="nav-link nav-login">
            <i class="fab fa-twitter"></i>
        </a>
    </li>
    
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link nav-login" id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <i class="fas fa-user"></i> @UserManager.GetUserName(User)
            </a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
                <button type="submit" class="nav-link nav-login">
                    <i class="fas fa-sign-in-alt"></i> Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            @* <a class="nav-link nav-login" id="register" asp-area="Identity" asp-page="/Account/Register"> *@
            <a href="" class="nav-link nav-login" id="register" data-toggle="modal" data-target="#RegisterModal">
                <i class="fas fa-user"></i> Sign Up
            </a>
        </li>
        <li class="nav-item">
        @* <a class="nav-link nav-login" id="login" asp-area="Identity" asp-page="/Account/Login"> *@
            <a href="" class="nav-link nav-login" data-toggle="modal" data-target="#LoginModal" id="loginButton">
                <i class="fas fa-sign-in-alt"></i> Login
            </a>
        </li>
    }
</ul>

