
<div class="container">
    <h1 class="mb-5">Create project</h1>
    
    <form id="project_create">
        <ul class="form__errors"></ul>
        
        <div class="form-group">
            <label for="project-title">Title</label>
            <input required class="form-control" type="text" name="title" id="project-title">
        </div>
        <div class="form-group">
            <label for="project-description">Description</label>
            <textarea required="" name="description" id="project-description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label for="project-start-date">Start date</label>
            <input required class="form-control" type="date" name="start-date" id="project-start-date">
        </div>
        <div class="form-group">
            <label for="project-end-date">End date</label>
            <input required class="form-control" type="date" name="end-date" id="project-end-date">
        </div>
        <div class="form-group">
            <button class="image-uploader__add btn">Add Image</button>
            <div class="image-uploader__images"></div>
            <input type="file" class="image-uploader__file-upload" accept="image/x-png,image/gif,image/jpeg" multiple>
        </div>
        <button type="submit" class="btn">Create</button>
    </form>
</div>

@section Scripts
{
    <script type="text/javascript" src="/dist/project.entry.js" defer></script>
}
