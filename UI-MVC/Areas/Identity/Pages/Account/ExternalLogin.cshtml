@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Registreer";
}

<main class="container">
    <h1>@ViewData["Title"]</h1>
    <h4>Koppel hier je @Model.LoginProvider account.</h4>
    <hr />
    
    <p class="text-info">
        Je hebt je @Model.LoginProvider succesvol gekoppeld.
        Gelieve een emailadres in te vullen en vervolgens op "Registreer" te klikken.
    </p>
    
    <div class="row">
        <div class="col-md-4">
            <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn__witteAchtergrond">Registreer</button>
            </form>
        </div>
    </div>
</main>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
